generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Client {
  id               Int @id @default(autoincrement())
  email            String
  password         String
  firstName        String?
  lastName         String?
  domain           String?
}

model Post {
  id               Int     @id @default(autoincrement())
  title            String
  category         String
  summary          String
  authorName       String
  imageUrl         String?
  referencePostUrl String?
  date             String?
}
