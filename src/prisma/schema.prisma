generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Client {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  password   String
  firstName  String
  lastName   String
  domain     String  @unique
  isPremium  Boolean @default(false)
  hero       String
  timeline   String
  resumeLink String
}

model Post {
  id               Int     @id @default(autoincrement())
  clientDomain     String
  title            String
  category         String
  summary          String
  authorName       String
  imageUrl         String?
  referencePostUrl String?
  date             String?
}
