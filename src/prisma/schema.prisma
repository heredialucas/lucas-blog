generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Client {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  password     String
  imageUrl     String?
  firstName    String?
  lastName     String?
  domain       String  @unique
  isSubscribed Boolean @default(false)
  hero         String?
  timeline     String?
  resumeLink   String?
  instagram    String?
  facebook     String?
  linkedin     String?
  twitter      String?
}

model Post {
  id               Int     @id @default(autoincrement())
  clientDomain     String
  title            String
  category         String
  summary          String
  authorName       String
  imageUrl         String
  referencePostUrl String?
  date             String?
}
